{
  "name": "Lego Launcher",
  "version": "0.1",
  "productName": "Lego Launcher",
  "description": "Jouez aux legos!",
  "main": "app/index.html",
  "author": "Limeen",
  "window": {
    "title": "Lego Updater",
    "width": 400,
    "height": 500,
    "frame": false,
    "resizable": false,
    "position": "center",
    "icon": "app/assets/images/icons/icon.png"
  },
  "engines": {
    "node": "16.x.x"
  },
  "chromium-args": "--enable-logging --v=1 --disable-gpu --mixed-content",
  "url": "http://legoo.alwaysdata.net/",
  "user": "",
  "webkit": {
    "plugin": true
  },
  "scripts": {
    "start": "run --64 --mirror https://dl.nwjs.io/ .",
    "build:win": "npm install && build --win --x64 --mirror https://dl.nwjs.io/ .",
    "build:mac": "npm install && build --mac --x64 --mirror https://dl.nwjs.io/ .",
    "build:linux": "npm install && build --linux --x64 --mirror https://dl.nwjs.io/ .",
    "build:all": "npm run build:linux && npm run build:mac && npm run build:win",
    "dev": "nodemon --exec npm start"
  },
  "license": "CC0",
  "build": {
    "appId": "Lego-Launcher",
    "nwVersion": "0.60.0",
    "packed": true,
    "targets": [
      "zip",
      "nsis7z"
    ],
    "strippedProperties": [
      "build"
    ],
    "excludes": [
      ".gitignore",
      "nodemon.json",
      "tool.bat",
      "web/**",
      "AppData/**",
      "node-v*/**",
      "test/**",
      "package-lock.json",
      "README.md"
    ],
    "outputPattern": "${NAME}-${PLATFORM}",
    "win": {
      "productName": "Lego Launcher",
      "companyName": "Lego Launcher",
      "copyright": "copyright",
      "icon": "./app/assets/images/icons/icon.ico"
    },
    "mac": {
      "displayName": "Lego Launcher",
      "copyright": "copyright",
      "plistStrings": {
        "CFBundleIdentifier": "Lego-Launcher"
      }
    },
    "nsis": {
      "installDirectory": "$LOCALAPPDATA\\Programs\\${_COMPANYNAME}",
      "diffUpdaters": false
    }
  },
  "devDependencies": {
    "nodemon": "^2.0.15",
    "nwjs-builder-luuxis": "^1.15.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Limeen/Lego-Launcher"
  },
  "dependencies": {
    "minecraft-java-core": "^1.2.0",
    "nw-autoupdater-luuxis": "^1.1.4"
  }
}
